<% include layout/top.ejs %>

<div class="col-md-9">
    <!-- column 2 -->
    <a href="#"><strong> <%= title %></strong></a>
    <hr>
    <div class="row">
        <table class="table">
            <thead>
            <tr>
                <% fields.forEach(field => { %>
                    <th><%= field %></th>
                <% }); %>
            </tr>
            </thead>
            <tbody>
            <% items.forEach(item => { %>
                <tr>
                    <% fields.forEach((field, index) => { %>
                        <% if (!item[field].type) { %>
                            <td><%= item[field] %></td>
                        <% } else if (item[field].type === 'button') { %>
                            <td>
                                <a href="<%= item[field].link %>" class="btn btn-<%= item[field].buttonType %>">
                                    <span class="glyphicon <%= item[field].icon %>"></span>
                                </a>
                            </td>
                        <% } else { %>
                            <td>
                                <input class="form-check-input" type="checkbox" checked="<%= item[field].value %>">
                            </td>
                        <% } %>
                    <% }); %>
                </tr>
            <% }); %>
            </tbody>
        </table>
    </div><!--/row-->
</div><!--/col-span-9-->

<% include layout/bottom.ejs %>