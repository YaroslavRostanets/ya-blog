<% include layout/top.ejs %>

<div class="col-md-9">
    <!-- column 2 -->
    <a href="#"><strong> <%= title %></strong></a>
    <hr>
    <div class="row">
        <form method="post">
            <div style="margin-bottom: 30px">
                <input name="id" type="hidden" value="<%= id %>">
                <div class="form-group <%= errors && errors.label ? 'has-error' : '' %>">
                    <label for="categoryName" class="control-label">Category name</label>
                    <input name="label" type="name" class="form-control" id="categoryName" placeholder="Enter name of category" value="<%= label %>">
                    <% if (errors && errors.label) { %>
                    <small id="categoryNameHelp" class="form-text text-danger"><%= errors.label %></small>
                    <% } %>
                </div>
                <div class="form-check">
                    <input name="published" type="checkbox" class="form-check-input" id="categoryPublished" <%= published ? "checked": "" %>>
                    <label class="form-check-label" for="categoryPublished">Published</label>
                </div>
            </div>
            <button onclick="history.back()" class="btn btn-secondary">Back</button>
            <button type="submit" class="btn btn-primary">Save</button>
        </form>
    </div><!--/row-->
</div><!--/col-span-9-->

<% include layout/bottom.ejs %>