<div class="card single_post">
    <div class="body">
        <div class="img-post">
            <img class="d-block img-fluid" src="<%= item.previewSrc%>" alt="preview">
        </div>
        <h3><a href="blog-details.html"><%= item.title %></a></h3>
        <p><%= item.announcement %></p>
    </div>
    <div class="footer">
        <div class="actions">
            <a href="/blog/detail/<%= item.furl %>" class="btn btn-outline-secondary">Read</a>
        </div>
        <ul class="stats">
            <% item.categories.forEach(function(category){ %>
                <li><a href="javascript:void(0);"><%= category['CategoryDictionary.label'] %></a></li>
            <% }); %>
            <li><a href="javascript:void(0);" class="fa fa-eye"><%= item.views %></a></li>
        </ul>
    </div>

</div>