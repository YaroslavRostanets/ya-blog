<style>
    .instagram-plugin {
        overflow: hidden;
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
    }

    .instagram-plugin li {
        width: 102px;
        height: 102px;
        overflow: hidden;
        border: 1px solid #fff;
        display: flex;
        align-items: center;
        justify-content: center;
    }
    .instagram-plugin a {
        display: flex;
        align-items: center;
        justify-content: center;
    }
    .instagram-plugin img {
        max-width: 100%;
        max-height: 100%;
    }
    @media (max-width: 1230px) {
        .instagram-plugin li {
            width: 33%;
            height: 98px;
        }
    }
    @media (max-width: 1200px) {
        .instagram-plugin li {
            width: 33%;
            height: 80px;
        }
    }
    @media (max-width: 992px) {
        .instagram-plugin li {
            height: 197px;
        }
    }
    @media (max-width: 768px) {
        .instagram-plugin li {
            width: 33% !important;
            height: 97px;
        }
    }

</style>
<div class="card instagram-plugin-wrap">
    <div class="header">
        <h2>Instagram</h2>
    </div>
    <div class="body widget">
        <ul class="list-unstyled instagram-plugin m-b-0">
            <% instagram.forEach(function(post){ %>
                <li>
                    <a href="https://www.instagram.com/yaroslav_r/">
                        <img src="<%= post.media_url %>"
                             alt="instagram post">
                    </a>
                </li>
            <% }); %>

        </ul>
    </div>
</div>